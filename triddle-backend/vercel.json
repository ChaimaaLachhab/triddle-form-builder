{
  "version": 2,
  "regions": ["iad1"],
  "builds": [
    {
      "src": "src/index.js",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb",
        "includeFiles": [
          "prisma/schema.prisma",  // Required for `prisma generate`
          "node_modules/.prisma/**",  // Prisma Client
          "node_modules/@prisma/client/**"  // Prisma Types
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "src/index.js",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"]
    },
    {
      "src": "/(.*)",
      "dest": "src/index.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "build": {
    "env": {
      "PRISMA_GENERATE": "npx prisma generate"
    }
  }
}